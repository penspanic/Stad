<UserControl x:Class="Stad.View.Wpf.UI.Components.DataSetElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stad.View.Wpf.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid Background="BlanchedAlmond">
		<Border BorderThickness="1" BorderBrush="Black">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition/>
					<RowDefinition Height="Auto"/>
					<RowDefinition/>
				</Grid.RowDefinitions>
				<Label Name="label_Header" Grid.Row="0" FontSize="20" HorizontalAlignment="Center">Header</Label>
				<Separator Grid.Row="1"/>
				<Label Name="label_Body" Grid.Row="2">Body</Label>
			</Grid>
		</Border>
    </Grid>
</UserControl>
