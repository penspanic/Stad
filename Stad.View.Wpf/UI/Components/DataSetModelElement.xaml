<UserControl x:Class="Stad.View.Wpf.UI.Components.DataSetModelElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stad.View.Wpf.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid Background="BurlyWood">
		<Border BorderThickness="1" BorderBrush="Black">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition/>
					<RowDefinition Height="Auto"/>
					<RowDefinition/>
				</Grid.RowDefinitions>
				<Label Name="label_Header" Grid.Row="0" FontSize="20" HorizontalAlignment="Center">Header</Label>
				<Separator Grid.Row="1"/>
				<Grid Grid.Row="2">
					<Grid.RowDefinitions>
						<RowDefinition/>
						<RowDefinition/>
					</Grid.RowDefinitions>
					<Label Name="label_Body" Grid.Row="0" HorizontalAlignment="Center">Body</Label>
					<Button Name="button_Detail" Grid.Row="1" FontSize="25" Click="button_Detail_Click">Detail</Button>
				</Grid>
			</Grid>
		</Border>
	</Grid>
</UserControl>
